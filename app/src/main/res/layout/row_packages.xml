<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.PackagesAdapter" />

        <variable
            name="model"
            type="app.com.maksab.api.dao.PackagesResponse.PackagePlan" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:onClick="@{()->adapter.onItemClick(model)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/alert_dialog_bg_white"
            android:orientation="vertical">

            <RelativeLayout
                    android:id="@+id/llImage"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_centerInParent="true"
                    />

            <LinearLayout
                android:padding="10dp"
                android:id="@+id/llHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.afterAmount}"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="26sp"
                        app:font="@{@string/bold}" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/beforeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.beforeAmount}"
                        android:gravity="center_vertical"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:font="@{@string/regular}" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="end|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.planName}"
                        android:textColor="@color/white"
                        android:textSize="26dp"
                        app:font="@{@string/bold}" />

                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vat_inclusive"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        app:font="@{@string/regular}" />


                </LinearLayout>


            </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:onClick="@{()->adapter.onItemClick(model)}"
                android:layout_margin="8dp"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/subscribed"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:text="@string/subscribed"
                    app:font="@{@string/bold}" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="@{model.expiryDate}"
                    android:gravity="end"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:font="@{@string/regular}" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>