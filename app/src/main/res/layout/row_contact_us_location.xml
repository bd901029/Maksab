<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.ContactUsLocationAdapter" />

        <variable
            name="model"
            type="app.com.maksab.api.dao.ContactUsResponse.ContactList" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->adapter.onItemClick(model)}"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:padding="2dp"
            android:text="@{model.conatctUsName}"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:font="@{@string/bold}" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:padding="2dp"
                android:text="@string/location"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:font="@{@string/bold}" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:padding="2dp"
                android:text="@{model.addressLocation}"
                android:textColor="@color/gray_dark"
                android:textSize="14sp"
                app:font="@{@string/regular}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:padding="2dp"
                android:text="@string/contact"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                app:font="@{@string/bold}" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lines="1"
                android:padding="2dp"
                android:textColor="@color/colorAccent"
                android:textSize="13sp"
                android:text="1234567890"
                app:font="@{@string/bold}" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/bg_corner_white">

            <com.google.android.gms.maps.MapView
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/title"
                map:liteMode="true" />

        </LinearLayout>



    </LinearLayout>

</layout>