<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.DialogCityAdapter" />

        <variable
            name="model"
            type="app.com.maksab.api.dao.CountryCityListResponse.CityList"/>
    </data>

        <LinearLayout
            android:onClick="@{()->adapter.onItemClick(model)}"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="@{model.cityName}"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                app:font="@{@string/regular}" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/cityStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/check" />
            </LinearLayout>

        </LinearLayout>

</layout>