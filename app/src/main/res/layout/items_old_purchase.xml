<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.PastPurchaseAdapter"/>

        <variable
            name="model"
            type="app.com.maksab.api.dao.UpcomingPurchaseModel.OfferList"/>
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F1F1F1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="05dp"
                android:layout_margin="08dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorAccent"/>

                    <RelativeLayout
                        android:layout_width="110dp"
                        android:layout_height="130dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/rectangle_round_corner_border">

                        <ImageView
                            android:id="@+id/offer_img"
                            android:layout_width="150dp"
                            android:layout_height="140dp"
                            android:src="@drawable/product_icon"/>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:background="@drawable/rectangle_light_white">

                            <ImageView
                                android:id="@+id/no_pic_image"
                                android:layout_width="40dp"
                                android:layout_height="40dp" />

                        </LinearLayout>



                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@{model.offerDescription}"
                            android:textSize="14sp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:layout_margin="10dp"
                            app:font="@{@string/bold}"
                            android:textColor="@color/colorAccent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.beforeAmount}"
                                android:textColor="#5D5D5D"
                                android:textSize="11sp"
                                android:layout_marginStart="05dp"
                                app:font="@{@string/bold}"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.afterAmount}"
                                android:textColor="#56905E"
                                android:textSize="11sp"
                                android:layout_marginStart="05dp"
                                app:font="@{@string/bold}"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{model.discountRate+`% `+@string/off}"
                                android:textSize="11sp"
                                android:textColor="@color/white"
                                android:layout_marginStart="10dp"
                                android:padding="03dp"
                                app:font="@{@string/regular}"
                                android:background="@drawable/rectangle_purple"/>

                            <LinearLayout
                                android:id="@+id/rating_ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:paddingTop="03dp"
                                android:paddingBottom="03dp"
                                android:paddingStart="05dp"
                                android:paddingEnd="05dp"
                                android:background="@drawable/rectangle_dark_yellow">

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_star_border"/>

                                <TextView
                                    android:id="@+id/rates"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@{model.rates}"
                                    android:textSize="11sp"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:layout_marginStart="05dp"
                                    android:layout_marginEnd="05dp"
                                    android:textColor="@color/white"
                                    app:font="@{@string/regular}" />

                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E6E7E9"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="05dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@{model.reedeemDates}"
                                android:textColor="@color/gray_dark"
                                android:textSize="11sp"
                                app:font="@{@string/bold}"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="05dp"/>


                            <TextView
                                android:id="@+id/rateIt"
                                android:layout_margin="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:gravity="center"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:text="@string/rate_it"
                                android:textColor="@color/red"
                                android:textSize="12sp"
                                android:background="@drawable/radius_line_red"
                                app:font="@{@string/regular}"
                                />

                        </LinearLayout>




                    </LinearLayout>




                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>





    </RelativeLayout>
</layout>