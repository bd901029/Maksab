<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.FacilityAdapter" />

        <variable
            name="model"
            type="app.com.maksab.api.dao.OfferDetailsResponse.FacilityList" />
    </data>

    <LinearLayout
        android:padding="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{()->adapter.onItemClick(model)}"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="22sp"
            android:layout_height="22sp"
            android:scaleType="fitXY"
            app:imageUrl="@{model.facilityImg}" />

        <TextView
            android:id="@+id/storeNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:padding="2sp"
            android:text="@{model.facilityName}"
            android:textSize="12sp"
            app:font="@{@string/regular}" />

    </LinearLayout>

</layout>