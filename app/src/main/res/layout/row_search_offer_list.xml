<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.SearchOfferListAdapter"/>
        <variable
           name="model"
           type="app.com.maksab.api.dao.SearchListResponse.OfferData" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

            <LinearLayout
                android:onClick="@{()->adapter.onItemClick(model)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{model.offerImg}"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/offer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="3"
                            android:text="@{model.offerName}"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            app:font="@{@string/regular}" />


                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/beforeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="@{model.beforeAmount}"
                        android:textSize="16sp"
                        app:font="@{@string/bold}" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/afterAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:text="@{model.afterAmount}"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="16sp"
                        app:font="@{@string/bold}" />

                </LinearLayout>

            </LinearLayout>


    </android.support.v7.widget.CardView>

</layout>