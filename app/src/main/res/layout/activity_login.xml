<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="activity"
            type="app.com.maksab.view.activity.LoginActivity" />
        <variable
            name="model"
            type="app.com.maksab.view.viewmodel.LoginModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context="app.com.minimall.view.activity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="20dp"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo_small"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_signin"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:font="@{@string/bold}" />
                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="@string/label_no_account"
                    android:textColor="@color/gray_text"
                    android:textStyle="bold"
                    app:font="@{@string/bold}"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.45">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/emailInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/divider_color"
                        >

                        <EditText
                            android:id="@+id/email_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="16dp"
                            android:hint="@string/hint_email_mobile"
                            android:imeOptions="actionNext"
                            android:drawableStart="@drawable/mail3x"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLength="50"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/divider_color"
                            android:textSize="@dimen/form_text_size"
                            android:theme="@style/MyEditText"
                            app:font="@{@string/regular}"
                            android:text="@={model.email}"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/passwordInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="10dp"
                        android:textColorHint="@color/divider_color"
                        >

                        <EditText
                            android:id="@+id/password_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="16dp"
                            android:hint="@string/hint_password"
                            android:imeOptions="actionNext"
                            android:drawableStart="@drawable/password3x"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLength="20"
                            android:textColor="@color/gray_text"
                            android:textColorHint="@color/divider_color"
                            android:textSize="@dimen/form_text_size"
                            android:theme="@style/MyEditText"
                            app:font="@{@string/regular}"
                            android:text="@={model.password}"

                            />
                    </android.support.design.widget.TextInputLayout>

                    <Button
                        android:onClick="@{()->activity.onLoginButtonClick(model)}"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_size"
                        android:background="@drawable/button_blue_corner"
                        android:text="@string/label_signin"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:font="@{@string/regular}"/>

                    <TextView
                        android:id="@+id/forgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:onClick="@{()->activity.onForgotBtnClick()}"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:text="@string/label_forgot_password"
                        android:textColor="@color/gray_text"
                        app:font="@{@string/regular}" />

                    <View
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/divider_color"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:padding="10dp"
                        android:text="@string/label_no_account"
                        android:textColor="@color/gray_text"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        app:font="@{@string/bold}" />

                    <Button
                        android:onClick="@{()->activity.onRegisterButtonClick()}"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_size"
                        android:background="@drawable/button_primary"
                        android:text="@string/label_sign_up"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:font="@{@string/regular}"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>