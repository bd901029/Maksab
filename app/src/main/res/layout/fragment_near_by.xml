<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="app.com.maksab.view.fragment.home.NearByFragment" />

        <!--  <variable
              name="model"
              type="com.app.rokape.model.LoginModel"/>-->
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.borrow.android.view.fragment.SavedFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txNotification"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/near_by"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <ImageView
            android:onClick="onClickNearByFilter"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:id="@+id/nearByFilter"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="@color/divider_color" />

    <!-- <fragment
         android:id="@+id/map_container_near_by"
         class="com.google.android.gms.maps.SupportMapFragment"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         app:uiZoomControls="true" />
 -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_container_near_by"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
</layout>
