<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data>

		<variable
				name="fragment"
				type="app.com.maksab.view.fragment.home.ProfileFragment" />

		<variable
				name="model"
				type="app.com.maksab.api.dao.ProfileResponse" />

		<variable
				name="model2"
				type="app.com.maksab.api.dao.GetOrderAmount" />
	</data>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				  xmlns:app="http://schemas.android.com/apk/res-auto"
				  xmlns:tools="http://schemas.android.com/tools"
				  android:layout_width="match_parent"
				  android:layout_height="match_parent"
				  android:background="@color/bg"
				  android:orientation="vertical">

		<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/side_nav_bar"
						android:orientation="vertical">

					<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">


						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginStart="5dp"
								android:text="@string/my_account"
								android:textColor="@color/white"
								android:textSize="18sp"
								android:layout_centerInParent="true"
								app:font="@{@string/regular}" />

						<TextView
								android:onClick="@{()->fragment.onClickLogout()}"
								android:padding="8dp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/logout"
								android:layout_alignParentEnd="true"
								android:textColor="@color/white"
								android:textSize="14sp"
								app:font="@{@string/regular}"
								android:visibility="invisible"/>

					</RelativeLayout>


					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="vertical">

						<RelativeLayout
								android:layout_width="95dp"
								android:layout_height="95dp">

							<com.mikhaellopez.circularimageview.CircularImageView
									android:layout_width="90dp"
									android:layout_height="90dp"
									android:layout_centerInParent="true"
									app:imageUrl="@{model.profilePic}" />

							<ImageView
									android:layout_width="25dp"
									android:layout_height="25dp"
									android:layout_alignParentEnd="true"
									android:layout_centerVertical="true"
									android:src="@drawable/camra" />

						</RelativeLayout>

					</LinearLayout>

					<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="7sp"
							android:gravity="center"
							android:maxLines="2"
							android:text="@{model.userName}"
							android:textColor="@color/white"
							android:textSize="18sp"
							app:font="@{@string/regular}" />

					<LinearLayout
							android:layout_marginBottom="7sp"
							android:layout_marginTop="7sp"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:gravity="center"
								android:maxLines="2"
								android:text="@{model.email}"
								android:textColor="@color/white"
								android:textSize="18sp"
								app:font="@{@string/regular}" />

						<TextView
								android:id="@+id/emailVerified"
								android:layout_marginStart="7sp"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:gravity="center"
								android:maxLines="2"
								android:text="@string/verified"
								android:textColor="@color/green_full"
								android:textSize="16sp"
								app:font="@{@string/regular}" />
					</LinearLayout>



					<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content">

						<LinearLayout
								android:layout_centerInParent="true"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center"
								android:orientation="horizontal">

							<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:gravity="center"
									android:maxLines="2"
									android:text="@{model.mobile}"
									android:textColor="@color/white"
									android:textSize="18sp"
									app:font="@{@string/regular}" />

							<TextView
									android:id="@+id/mobileVerified"
									android:layout_marginStart="10sp"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:gravity="center"
									android:maxLines="2"
									android:text="@string/verified"
									android:textColor="@color/green_full"
									android:textSize="16sp"
									app:font="@{@string/regular}" />

						</LinearLayout>


						<ImageView
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_alignParentRight="true"
								android:onClick="@{()->fragment.onClickEditProfile()}"
								android:padding="8sp"
								app:srcCompat="@drawable/ic_edit_assets" />

					</RelativeLayout>



				</LinearLayout>




				<ScrollView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:fillViewport="true">

					<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">


						<LinearLayout
								android:id="@+id/top_ll"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_below="@+id/header"
								android:layout_margin="10dp"
								android:orientation="horizontal">

							<android.support.v7.widget.CardView
									android:layout_width="0dp"
									android:layout_height="wrap_content"
									android:layout_margin="03dp"
									android:layout_weight="1"
									app:cardBackgroundColor="@color/white"
									app:cardCornerRadius="05dp">

								<LinearLayout
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:gravity="center"
										android:orientation="vertical"
										android:paddingBottom="10dp"
										android:paddingTop="10dp">

									<ImageView
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/confirm_purchase" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@string/total_purchase"
											android:textColor="#4B4B4B"
											android:textSize="14sp"
											app:font="@{@string/regular}" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@{model2.totalPurchaseAmount}"
											android:textColor="#09C39C"
											android:textSize="16sp"
											app:font="@{@string/bold}" />


								</LinearLayout>


							</android.support.v7.widget.CardView>

							<android.support.v7.widget.CardView
									android:layout_width="0dp"
									android:layout_height="wrap_content"
									android:layout_margin="03dp"
									android:layout_marginEnd="20dp"
									android:layout_marginStart="20dp"
									android:layout_weight="1"
									app:cardBackgroundColor="@color/white"
									app:cardCornerRadius="05dp">

								<LinearLayout
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:gravity="center"
										android:orientation="vertical"
										android:paddingBottom="10dp"
										android:paddingTop="10dp">

									<ImageView
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/cash" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@string/redeme_offers"
											android:textColor="#4B4B4B"
											android:textSize="14sp"
											app:font="@{@string/regular}" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@{model2.noOfRedeemOffers}"
											android:textColor="#24B1E7"
											android:textSize="16sp"
											app:font="@{@string/bold}" />


								</LinearLayout>

							</android.support.v7.widget.CardView>

							<android.support.v7.widget.CardView
									android:layout_width="0dp"
									android:layout_height="wrap_content"
									android:layout_margin="03dp"
									android:layout_weight="1"
									app:cardBackgroundColor="@color/white"
									app:cardCornerRadius="05dp">

								<LinearLayout
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:gravity="center"
										android:orientation="vertical"
										android:paddingBottom="10dp"
										android:paddingTop="10dp">

									<ImageView
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/investment" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@string/total_savings"
											android:textColor="#4B4B4B"
											android:textSize="14sp"
											app:font="@{@string/regular}" />

									<TextView
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="05dp"
											android:text="@{model2.totalSavingThisYear}"
											android:textColor="#E5812C"
											android:textSize="16sp"
											app:font="@{@string/bold}" />


								</LinearLayout>

							</android.support.v7.widget.CardView>

						</LinearLayout>

						<LinearLayout
								android:onClick="@{()->fragment.onClickPurchases()}"
								android:id="@+id/llPurchase"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:layout_marginBottom="4dp"
								android:padding="8dp">

							<TextView
									android:layout_width="match_parent"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:layout_marginStart="16dp"
									android:lines="1"
									android:text="@string/purchases"
									app:font="@{@string/regular}"
									android:textColor="@color/black"
									android:textSize="16sp" />

							<ImageView
									android:layout_marginEnd="20dp"
									android:visibility="visible"
									android:layout_width="18dp"
									android:layout_height="18dp"
									android:src="@drawable/ic_chevron_right"
									/>

						</LinearLayout>

						<View
								android:layout_marginStart="16dp"
								android:layout_marginEnd="16dp"
								android:layout_width="match_parent"
								android:layout_height="0.5sp"
								android:background="@color/divider_color"/>

						<LinearLayout
								android:id="@+id/llPurchaseDetails"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="vertical">

						</LinearLayout>

						<LinearLayout
								android:onClick="@{()->fragment.onClickCountry()}"
								android:id="@+id/llCountryLanguage"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:gravity="center_vertical"
								android:orientation="horizontal"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:padding="8dp">

							<TextView
									android:layout_width="match_parent"
									android:layout_weight="1"
									android:layout_height="wrap_content"
									android:layout_marginStart="16dp"
									android:lines="1"
									android:text="@string/country_languages"
									app:font="@{@string/regular}"
									android:textColor="@color/black"
									android:textSize="16sp" />

							<ImageView
									android:visibility="visible"
									android:id="@+id/countryFlag"
									android:layout_width="50dp"
									android:layout_height="30dp"
									android:src="@drawable/logo_small"
									/>

						</LinearLayout>

						<View
								android:layout_marginStart="16dp"
								android:layout_marginEnd="16dp"
								android:layout_width="match_parent"
								android:layout_height="0.5sp"
								android:background="@color/divider_color"/>

						<TextView
								android:onClick="@{()->fragment.onClickFamilyMember()}"
								android:id="@+id/llFamilyMember"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:lines="1"
								android:text="@string/family_member"
								app:font="@{@string/regular}"
								android:textColor="@color/black"
								android:textSize="16sp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:padding="8dp"/>

						<View
								android:layout_marginStart="16dp"
								android:layout_marginEnd="16dp"
								android:layout_width="match_parent"
								android:layout_height="0.5sp"
								android:background="@color/divider_color"/>

						<TextView
								android:onClick="@{()->fragment.onClickChangePasswordDialog()}"
								android:id="@+id/llChangePasssword"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:lines="1"
								android:text="@string/change_passsword"
								app:font="@{@string/regular}"
								android:textColor="@color/black"
								android:textSize="16sp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:padding="8dp"/>

						<View
								android:layout_marginStart="16dp"
								android:layout_marginEnd="16dp"
								android:layout_width="match_parent"
								android:layout_height="0.5sp"
								android:background="@color/divider_color"/>

						<TextView
								android:id="@+id/llInvite"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginStart="16dp"
								android:lines="1"
								android:text="@string/invite"
								app:font="@{@string/regular}"
								android:textColor="@color/black"
								android:textSize="16sp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:padding="8dp"/>

						<View
								android:layout_marginStart="16dp"
								android:layout_marginEnd="16dp"
								android:layout_width="match_parent"
								android:layout_height="0.5sp"
								android:background="@color/divider_color"/>

					</LinearLayout>

				</ScrollView>
			</LinearLayout>

			<ProgressBar
					android:id="@+id/progressBar"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:visibility="gone" />



		</RelativeLayout>

	</LinearLayout>
</layout>