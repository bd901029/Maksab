<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="activity"
            type="app.com.maksab.view.activity.ProfileEditActivity" />

        <variable
            name="model"
            type="app.com.maksab.api.dao.ProfileResponse" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llScrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="14dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="true"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:padding="15dp">

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fillViewport="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="95dp"
                                        android:layout_height="95dp"
                                        android:onClick="@{()->activity.onClickProfilePic()}">

                                        <com.mikhaellopez.circularimageview.CircularImageView
                                            android:id="@+id/ivUserAvatar"
                                            android:layout_width="90dp"
                                            android:layout_height="90dp"
                                            android:layout_alignParentTop="true"
                                            android:layout_centerHorizontal="true"
                                            app:imageUrl="@{model.profilePic}" />

                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:layout_alignParentEnd="true"
                                            android:layout_centerVertical="true"
                                            android:src="@drawable/camra" />

                                    </RelativeLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/welcome"
                                        android:textColor="@color/gray_text"
                                        android:textSize="14dp"
                                        app:font="@{@string/regular}" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:text="@{model.userName}"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="14dp"
                                        app:font="@{@string/regular}" />

                                </LinearLayout>

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/nameInputLayout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginTop="10dp"
                                    android:textColorHint="@color/divider_color">

                                    <EditText
                                        android:id="@+id/name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="16dp"
                                        android:drawableStart="@drawable/user3x"
                                        android:hint="@string/name"
                                        android:imeOptions="actionNext"
                                        android:inputType="textPersonName"
                                        android:lines="1"
                                        android:maxLength="50"
                                        android:textAlignment="viewStart"
                                        android:text="@{model.userName}"
                                        android:textColor="@color/gray_text"
                                        android:textColorHint="@color/divider_color"
                                        android:textSize="@dimen/form_text_size"
                                        android:theme="@style/MyEditText"
                                        app:font="@{@string/regular}" />

                                </android.support.design.widget.TextInputLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/mobileInputLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:textColorHint="@color/divider_color">

                                        <EditText
                                            android:id="@+id/mobile"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="16dp"
                                            android:drawableStart="@drawable/phone3x"
                                            android:hint="@string/hint_mobile"
                                            android:imeOptions="actionNext"
                                            android:inputType="phone"
                                            android:lines="1"
                                            android:maxLength="50"
                                            android:text="@{model.mobile}"
                                            android:textColor="@color/gray_text"
                                            android:textColorHint="@color/divider_color"
                                            android:textSize="@dimen/form_text_size"
                                            android:theme="@style/MyEditText"
                                            app:font="@{@string/regular}" />
                                    </android.support.design.widget.TextInputLayout>

                                    <TextView
                                        android:id="@+id/verifyMobile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/colorPrimaryDark"
                                        android:gravity="center"
                                        android:onClick="@{()->activity.VerifyMobileNumber(model)}"
                                        android:padding="5dp"
                                        android:text="@string/verify"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/emailInputLayout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:textColorHint="@color/divider_color">

                                        <EditText
                                            android:id="@+id/email_edt"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:drawablePadding="16dp"
                                            android:drawableStart="@drawable/mail3x"
                                            android:hint="@string/hint_email"
                                            android:imeOptions="actionNext"
                                            android:inputType="textEmailAddress"
                                            android:lines="1"
                                            android:maxLength="50"
                                            android:textAlignment="viewStart"                                            android:text="@{model.email}"
                                            android:textColor="@color/gray_text"
                                            android:textColorHint="@color/divider_color"
                                            android:textSize="@dimen/form_text_size"
                                            android:theme="@style/MyEditText"
                                            app:font="@{@string/regular}" />
                                    </android.support.design.widget.TextInputLayout>

                                    <TextView
                                        android:id="@+id/verifyEmail"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="5dp"
                                        android:layout_marginTop="5dp"
                                        android:background="@color/colorPrimaryDark"
                                        android:gravity="center"
                                        android:padding="5dp"
                                        android:text="@string/verify"
                                        android:textColor="@color/white"
                                        android:textSize="14dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:lines="1"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="3dp"
                                        android:layout_marginTop="20dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:layout_width="15dp"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/country" />

                                        <Spinner
                                            android:id="@+id/spCountry"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="16dp"
                                            android:dropDownWidth="fill_parent"
                                            android:gravity="center"
                                            android:textColor="@color/black"
                                            android:textSize="18sp" />
                                    </LinearLayout>

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0.5dp"
                                        android:background="@color/colorPrimary"></View>
                                </LinearLayout>


                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/button_height_size"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/button_blue_corner"
                                    android:minWidth="220dp"
                                    android:onClick="@{()->activity.UpdateProfileData(model)}"
                                    android:text="@string/update"
                                    android:textColor="@color/white"
                                    app:font="@{@string/bold}" />


                            </LinearLayout>
                        </ScrollView>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>