<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.FavoritesAllPartnersAdapter" />

         <variable
             name="model"
             type="app.com.maksab.api.dao.FavoritePartnerListResponse.BrandDataList"/>
    </data>
    <LinearLayout
        android:onClick="@{()->adapter.onItemClick(model)}"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:background="@color/white"
            android:clipToPadding="true"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                    <ImageView
                        android:layout_margin="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:imageUrl="@{model.brandImg}"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher" />

                    <ImageView
                        android:id="@+id/favImage"
                        android:layout_margin="8sp"
                        android:layout_width="12dp"
                        android:layout_height="18dp"
                        android:layout_alignParentEnd="true"/>

                </RelativeLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="@{model.brandName}"
            app:font="@{@string/regular}"/>
    </LinearLayout>
</layout>