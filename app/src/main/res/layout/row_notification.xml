<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="adapter"
            type="app.com.maksab.view.adapter.NotificationAdapter" />
        <variable
            name="model"
            type="app.com.maksab.api.dao.NotificationResponse.NotificationList" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:onClick="@{()->adapter.onItemClick(model)}"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/llImage"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    app:imageUrl="@{model.notificationImg}" />
            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="@{model.notificationTitle}"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        app:font="@{@string/regular}" />

                    <TextView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{model.notificationId}"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        app:font="@{@string/light}" />

                </LinearLayout>


                <com.borjabravo.readmoretextview.ReadMoreTextView
                    android:id="@+id/offerDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="@color/gray_dark"
                    android:textSize="12sp"
                    app:colorClickableText="@color/colorPrimary"
                    app:font="@{@string/regular}" />


                <TextView
                    android:id="@+id/date"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="Oct 01,2018"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    app:font="@{@string/regular}" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>