<?xml version="1.0" encoding="utf-8"?>
<layout>

	<data>

		<variable
				name="activity"
				type="app.com.maksab.view.activity.HomeActivity" />
	</data>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
					xmlns:tools="http://schemas.android.com/tools"
					xmlns:app="http://schemas.android.com/apk/res-auto"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					tools:context="com.fazza.fazzauser.view.activity.HomeActivity">


		<FrameLayout
				android:id="@+id/container"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_above="@+id/linLayBottom"/>

		<LinearLayout
				android:id="@+id/linLayBottom"
				android:layout_width="match_parent"
				android:layout_height="60dp"
				android:layout_alignParentBottom="true"
				android:background="@color/white"
				android:orientation="horizontal"
				android:weightSum="5">

			<LinearLayout
					android:id="@+id/grocery"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:background="@color/white"
					android:gravity="center"
					android:onClick="@{()->activity.onBottomNavigationItemClick(1)}"
					android:orientation="vertical"
			>

				<ImageView
						android:id="@+id/home"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/home3x" />

				<TextView
						android:layout_marginTop="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:text="@string/home"
						app:font="@{@string/regular}"
						android:textColor="@color/gray_text"
						android:textSize="10dp" />

			</LinearLayout>

			<View
					android:layout_width="0.05dp"
					android:layout_height="match_parent"
					android:background="@color/white" />

			<LinearLayout
					android:onClick="@{()->activity.onBottomNavigationItemClick(2)}"
					android:id="@+id/coffe"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

				<ImageView
						android:id="@+id/location"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/neaer_me3x" />

				<TextView
						android:layout_marginTop="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:text="@string/near_by"
						app:font="@{@string/regular}"
						android:textColor="@color/gray_text"
						android:textSize="10dp" />

			</LinearLayout>

			<View
					android:layout_width="0.05dp"
					android:layout_height="match_parent"
					android:background="@color/white" />

			<LinearLayout
					android:id="@+id/pharmacy"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:gravity="center"
					android:onClick="@{()->activity.onBottomNavigationItemClick(3)}"
					android:orientation="vertical"
					android:padding="5dp">

				<ImageView
						android:id="@+id/rating"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/rating_icon" />

				<TextView
						android:layout_marginTop="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:text="@string/favorites"
						app:font="@{@string/regular}"
						android:textColor="@color/gray_text"
						android:textSize="10dp" />

			</LinearLayout>

			<View
					android:layout_width="0.05dp"
					android:layout_height="match_parent"
					android:background="@color/white" />


			<LinearLayout
					android:id="@+id/llNotification"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:onClick="@{()->activity.onBottomNavigationItemClick(4)}"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

				<ImageView
						android:id="@+id/notification"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/notifications3x" />

				<TextView
						android:layout_marginTop="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:text="@string/notification"
						app:font="@{@string/regular}"
						android:textColor="@color/gray_text"
						android:gravity="center"
						android:textSize="10dp" />

			</LinearLayout>
			<View
					android:layout_width="0.05dp"
					android:layout_height="match_parent"
					android:background="@color/white" />

			<LinearLayout
					android:id="@+id/profile"
					android:onClick="@{()->activity.onBottomNavigationItemClick(5)}"
					android:layout_width="0dp"
					android:layout_weight="1"
					android:layout_height="match_parent"
					android:gravity="center"
					android:orientation="vertical"
					android:padding="5dp">

				<ImageView
						android:id="@+id/user"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:src="@drawable/me3x" />

				<TextView
						android:layout_marginTop="5dp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:lines="1"
						android:text="@string/me"
						app:font="@{@string/regular}"
						android:textColor="@color/gray_text"
						android:textSize="10dp" />

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>
</layout>